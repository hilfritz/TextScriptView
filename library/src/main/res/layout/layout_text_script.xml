<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentRelativeLayout"
    android:clipChildren="false"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/normalTextView"
        tools:text="Hello"
        android:textSize="18sp"
        android:text="normal"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/superscriptTextView"
        tools:text="SuperScript"
        android:textSize="8sp"
        android:textColor="#aa0000"
        android:layout_alignTop="@id/normalTextView"
        android:layout_toRightOf="@id/normalTextView"
        android:text="super"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subscriptTextView"
        tools:text="SubScript"
        android:textSize="8sp"
        android:textColor="#00aa00"
        android:layout_toRightOf="@id/normalTextView"
        android:text="sub"
        android:layout_alignBottom="@id/normalTextView"
        />
</RelativeLayout>